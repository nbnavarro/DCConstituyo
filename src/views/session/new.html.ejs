<div class="form-container">
  <div class="card">
    <% if (locals.notice) { %>
      <div className="notice"><%= notice %></div>
    <% } %>
    <h2>Inicio de sesión</h2>
    <% if (locals.error) { %>
      <div class="error">
        <%= error %>
      </div>
    <% } %>
    <%if (!currentUser) {%>
      <form action="<%= createSessionPath %>" method="post">
        <input type="hidden" name="_method" value="put" />
        <div>
          <div class="grid-general-form">


            <label for="email">Correo eléctrónico</label>
            <input type="text" name="email" value="<%= locals.email %>" />

            <label for="password">Contraseña</label>
            <input type="password" name="password" value="<%= locals.password %>" />

            
          </div>

        </div>
        <div>
          <input class= "button" type="submit" name="sign-in" value="Iniciar sesión" />
        </div>
      </form>
    <%} else {%>
        <p class="error">Error: ya has iniciado sesion!</p>
    <%}%>
  </div>
</div>